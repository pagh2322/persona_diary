<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PersonaDiary" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="ExpandedTextAppearance" parent="Theme.PersonaDiary">
        <item name="fontFamily">@font/nanum_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="CollapsedTextAppearance" parent="Theme.PersonaDiary">
        <item name="fontFamily">@font/nanum_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/sENFP</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="SmallRegularText" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/nanum_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/fontWColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NormalRegularText" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/nanum_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/fontWColor</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="BigRegularText" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/nanum_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/fontWColor</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="SmallBoldText" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/nanum_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/fontWColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NormalBoldText" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/nanum_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/fontWColor</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="BigBoldText" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/nanum_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/fontWColor</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupElevation">2dp</item>
        <item name="android:dropDownHorizontalOffset">-6dp</item>
        <item name="android:dropDownVerticalOffset">6dp</item>
        <item name="android:popupBackground">@drawable/bottom_app_bar_popup</item>
    </style>

    <style name="BottomAppBar" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/nanum_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/fontBColor</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="EditToolBar" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/nanum_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/fontWColor</item>
        <item name="actionMenuTextColor">@color/fontBColor</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Theme.PersonaDiary.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PersonaDiary.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PersonaDiary.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>